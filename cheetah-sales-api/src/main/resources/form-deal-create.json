{
	"name": "form-deal-create",
	"fields": [
		
		{
			"fieldGroupClassName": "row",
			"fieldGroup": [
			
				
				{
					"className": "col-md-3",
					"type": "input",
					"key": "name",
					"templateOptions": {
						"label": "Name",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				},
				{
					"className": "col-md-3",
					"type": "input",
					"key": "amount",
					"templateOptions": {
						"label": "Amount",
						"required": "true",
						"type": "number",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				},
				{
					"className": "col-md-3",
					"type": "contactLookup",
					"key": "contactId",
					"templateOptions": {
						"label": "Contact",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				},				
				{
					"className": "col-md-3",
					"type": "accountLookup",
					"key": "accountId",
					"templateOptions": {
						"label": "Account",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				},				
				{
					"className": "col-md-3",
					"type": "input",
					"key": "expectedClose",
					"templateOptions": {
						"label": "Expected Close Date",
						"attributes": {
							"class": "form-control form-control-sm",
							"type": "date"
						}
					}
				},
				{
					"className": "col-md-3",
					"type": "picklist",
					"key": "salesStageId",
					"templateOptions": {
						"label": "Sales Stage",
						"val": "salesStage",
						"domain": "SALES_STAGE",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				},
						
				{
					"className": "col-md-3",
					"type": "picklist",
					"key": "leadSourceId",
					"templateOptions": {
						"label": "Lead Source",
						"val": "leadSource",
						"domain": "LEAD_SOURCE",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				}
			]
		},
		{
			"fieldGroupClassName": "row",
			"fieldGroup": [
				{
					"className": "col-md-3",
					"type": "input",
					"key": "nextStep",
					"templateOptions": {
						"label": "Next Step",
						"attributes": {
							"class": "form-control form-control-sm"						
						}
					}
				},
				{
					"className": "col-md-3",
					"type": "picklist",
					"key": "dealTypeId",
					"templateOptions": {
						"label": "Deal Type",
						"val": "dealType",
						"domain": "DEAL_TYPE",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				}
				
			]
		},		
		{
			"fieldGroupClassName": "row",
			"fieldGroup": [
				{
					"className": "col-md-12",
					"type": "textarea",
					"key": "description",
					"templateOptions": {
						"label": "Description",
						"rows": "2",
						"attributes": {
							"class": "form-control form-control-sm"
						}
					}
				}
			]
		}
	]
}